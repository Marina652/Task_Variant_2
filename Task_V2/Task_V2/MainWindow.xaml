<Window x:Name="Window1" x:Class="Task_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextBoxSample" Height="650" Width="1000">

    <Grid Margin="10" Background="AliceBlue">
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="74" Margin="28,455,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="787"/>
        <Button x:Name="Button1" Content="Send a message" HorizontalAlignment="Left" Margin="838,455,0,0" VerticalAlignment="Top" Width="108" Height="74" Click="Message_Click" Background="LightSeaGreen"/>
        <ListBox x:Name="ListBox1" HorizontalAlignment="Left" Height="280" Margin="28,135,0,0" VerticalAlignment="Top" Width="787"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="423,553,0,0" VerticalAlignment="Top" Width="107" Height="37" Click="Exit_Click" Background="LightSeaGreen"/>
        <Label x:Name="Label1" Content="Sending messages to all traffic police posts" HorizontalAlignment="Left" Margin="145,48,0,0" VerticalAlignment="Top" Height="42" Width="644" FontSize="22" FontFamily="Rockwell Extra Bold"/>
    </Grid>
</Window>
